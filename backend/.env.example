# Application
NODE_ENV=development
PORT=3000

# Database (Crunchy PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/bcnotify

# CHES (Common Hosted Email Service)
CHES_BASE_URL=https://ches.api.gov.bc.ca/api/v1
CHES_CLIENT_ID=
CHES_CLIENT_SECRET=
CHES_TOKEN_URL=https://loginproxy.gov.bc.ca/auth/realms/comsvcauth/protocol/openid-connect/token

# Nodemailer (SMTP - e.g. Mailpit for local dev)
NODEMAILER_HOST=localhost
NODEMAILER_PORT=1025
NODEMAILER_SECURE=false
NODEMAILER_USER=
NODEMAILER_PASS=
NODEMAILER_FROM=noreply@localhost

# GC Notify adapter selection (nodemailer, twilio). Legacy: EMAIL_TRANSPORT/SMS_TRANSPORT still work.
EMAIL_ADAPTER=nodemailer
SMS_ADAPTER=twilio

# GC Notify default template engine (jinja2, handlebars, ejs, mustache, nunjucks)
GC_NOTIFY_DEFAULT_TEMPLATE_ENGINE=jinja2

# Twilio (SMS)
TWILIO_ACCOUNT_SID=
TWILIO_AUTH_TOKEN=
TWILIO_FROM_NUMBER=

# API Authentication
API_KEY=dev-api-key-change-in-production